---
import translations from '../data/translations.json';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Home</title>
    <style>
      html,body{height:100%;overflow:hidden}
      body{margin:0;font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;display:flex;align-items:center;justify-content:center;background:#fff;color:#111;cursor:none;position:relative}
      * {cursor:none !important}
      #letterfall-canvas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
      }
      .custom-cursor {
        width: 20px;
        height: 20px;
        border: 2px solid #111;
        border-radius: 50%;
        position: fixed;
        pointer-events: none;
        z-index: 10001;
        transform: translate(-50%, -50%);
        transition: width 0.2s ease, height 0.2s ease, border-color 0.2s ease;
      }
      .custom-cursor.hover {
        width: 40px;
        height: 40px;
        border-color: #999;
      }
      .lang-toggle {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 10000;
        display: flex;
        gap: 0.5rem;
      }
      .lang-toggle button {
        background: transparent;
        border: none;
        padding: 0;
        font-size: 0.75rem;
        transition: opacity 0.2s ease;
        opacity: 0.3;
        cursor: pointer;
        font-weight: 500;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }
      .lang-toggle button:hover {
        opacity: 0.6;
      }
      .lang-toggle button.active {
        opacity: 1;
      }
      nav{display:flex;flex-direction:column;gap:0.75rem;text-align:left}
      nav a{color:inherit;text-decoration:none;font-weight:500;text-transform:lowercase;letter-spacing:.02em;padding:0;font-size:1rem}
      .wrap{
        position:fixed;
        left:50%;
        top:50%;
        transform:translate(-50%, -50%);
        z-index:1000;
        padding:0;
        width:80%;
        max-width:800px;
      }
      nav{
        display:block;
        text-align:left;
        position:relative;
        line-height:1.2;
      }
      nav a{
        display:inline-block;
        font-size:clamp(2rem, 5vw, 4rem);
        font-weight:700;
        text-transform:uppercase;
        letter-spacing:0.02em;
        margin:0.2rem 0;
        position:relative;
        transition: opacity 0.3s ease, transform 0.3s ease;
      }
      nav a:hover{
        opacity: 0.5;
        transform: translateX(10px);
      }
      nav a:nth-child(1) { margin-left: 0; }
      nav a:nth-child(2) { margin-left: 15%; }
      nav a:nth-child(3) { margin-left: 30%; }
      nav a:nth-child(4) { margin-left: 10%; }
      nav a:nth-child(5) { margin-left: 25%; }
      nav a:nth-child(6) { margin-left: 5%; }
    </style>
  </head>
  <body>
    <canvas id="letterfall-canvas"></canvas>
    <div class="custom-cursor"></div>
    <div class="lang-toggle">
      <button class="lang-btn active" data-lang="en">ENG</button>
      <button class="lang-btn" data-lang="et">EST</button>
    </div>
    <div class="wrap">
      <nav id="nav">
        <a href="/" data-i18n="nav.home">home</a>
        <a href="/photos" data-i18n="nav.portraits">photos</a>
        <a href="/portfolio" data-i18n="nav.projects">projects</a>
        <a href="/prices" data-i18n="nav.prices">prices</a>
        <a href="/tshirts" data-i18n="nav.tshirts">t-shirts</a>
        <a href="/contact" data-i18n="nav.contact">contact</a>
      </nav>
    </div>
    <script define:vars={{ translations }}>
      const t = translations;
      let currentLang = localStorage.getItem('language') || 'en';

      // Update page text based on language
      function updateLanguage(lang) {
        currentLang = lang;
        localStorage.setItem('language', lang);
        
        // Update all elements with data-i18n attribute
        document.querySelectorAll('[data-i18n]').forEach(el => {
          const key = el.getAttribute('data-i18n');
          const keys = key.split('.');
          let value = t[lang];
          for (const k of keys) {
            value = value[k];
          }
          if (value) {
            el.textContent = value;
          }
        });

        // Update active language button
        document.querySelectorAll('.lang-btn').forEach(btn => {
          btn.classList.toggle('active', btn.getAttribute('data-lang') === lang);
        });

        // Update HTML lang attribute
        document.documentElement.lang = lang;
      }

      // Language toggle buttons
      document.querySelectorAll('.lang-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const lang = btn.getAttribute('data-lang');
          if (lang) {
            updateLanguage(lang);
          }
        });
      });

      // Initialize with saved language
      updateLanguage(currentLang);

      // Letterfall animation
      const canvas = document.getElementById('letterfall-canvas');
      const ctx = canvas.getContext('2d');
      
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
      
      const letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%&*+=?!';
      const fontSize = 16;
      const chars = [];
      
      // Create scattered characters with slow movement
      const numChars = 80;
      for (let i = 0; i < numChars; i++) {
        chars.push({
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height,
          char: letters[Math.floor(Math.random() * letters.length)],
          opacity: Math.random() * 0.2 + 0.3,
          dx: (Math.random() - 0.5) * 1.5,
          dy: (Math.random() - 0.5) * 1.5
        });
      }
      
      function draw() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.font = `${fontSize}px "Helvetica Neue", Helvetica, Arial, sans-serif`;
        
        for (let char of chars) {
          ctx.fillStyle = `rgba(40, 40, 40, ${char.opacity})`;
          ctx.fillText(char.char, char.x, char.y);
          
          // Slow drift movement
          char.x += char.dx;
          char.y += char.dy;
          
          // Wrap around screen edges
          if (char.x < -20) char.x = canvas.width + 20;
          if (char.x > canvas.width + 20) char.x = -20;
          if (char.y < -20) char.y = canvas.height + 20;
          if (char.y > canvas.height + 20) char.y = -20;
        }
      }
      
      let animationFrame;
      function animate() {
        draw();
        animationFrame = requestAnimationFrame(animate);
      }
      animate();
      
      window.addEventListener('resize', () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        // Reposition characters on resize
        chars.forEach(char => {
          char.x = Math.random() * canvas.width;
          char.y = Math.random() * canvas.height;
        });
      });
      
      window.addEventListener('resize', () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      });

      // Custom cursor movement
      const cursor = document.querySelector('.custom-cursor');
      document.addEventListener('mousemove', (e) => {
        if (cursor) {
          cursor.style.left = e.clientX + 'px';
          cursor.style.top = e.clientY + 'px';
        }
      });
      
      document.addEventListener('mouseover', (e) => {
        if (cursor && e.target instanceof Element && (e.target.tagName === 'A' || e.target.closest('a'))) {
          cursor.classList.add('hover');
        }
      });
      
      document.addEventListener('mouseout', (e) => {
        if (cursor && e.target instanceof Element && (e.target.tagName === 'A' || e.target.closest('a'))) {
          cursor.classList.remove('hover');
        }
      });
    </script>
  </body>
</html>
