      }
      .sidebar nav a {
        display: block;
        margin: 0.5rem 0;
        color: #222;
        text-decoration: none;
        font-weight: 500;
        text-transform: lowercase;
        font-family: inherit;
        letter-spacing: 0.02em;
        cursor: pointer;
      }
      .sidebar nav a:hover { text-decoration: underline; }
      .sub-nav {
        display: none;
        padding-left: 1rem;
        margin-top: 0.25rem;
      }
      .sub-nav.active {
        display: block;
      }
      .sub-nav a {
        font-size: 0.9rem;
        font-weight: 400;
        margin: 0.25rem 0;
        color: #666;
      }
      .sub-nav a:hover {
        color: #222;
      }
      .main-content {
        max-width: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
      }
      .project {
        margin-bottom: 2.5rem;
        border-bottom: 1px solid #f0f0f0;
        padding-bottom: 2rem;
        width: 100%;
      }
      .project summary {
        list-style: none;
        cursor: pointer;
        padding: 0;
        margin: 0;
        outline: none;
      }
      .project summary::-webkit-details-marker { display: none; }
      .project summary::marker { content: ''; display: none; }
      .project summary::before { content: ''; display: none; }
      .project summary { -webkit-appearance: none; appearance: none; }
      .summary-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
      }
      .summary-header h2 {
        font-size: 1.3rem;
        margin: 0;
      }
      .summary-header p {
        font-size: 0.95rem;
        color: #555;
        margin: 0;
      }
