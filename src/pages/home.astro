---
import translations from '../data/translations.json';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Home</title>
    <style>
      html,body{height:100%}
      body{margin:0;font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;display:flex;align-items:center;justify-content:center;background:#fff;color:#111;cursor:none}
      * {cursor:none !important}
      .custom-cursor {
        width: 20px;
        height: 20px;
        border: 2px solid #111;
        border-radius: 50%;
        position: fixed;
        pointer-events: none;
        z-index: 10001;
        transform: translate(-50%, -50%);
        transition: width 0.2s ease, height 0.2s ease, border-color 0.2s ease;
      }
      .custom-cursor.hover {
        width: 40px;
        height: 40px;
        border-color: #999;
      }
      .lang-toggle {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 10000;
        display: flex;
        gap: 0.5rem;
        background: #fff;
        padding: 0.25rem;
        border-radius: 20px;
        border: 1px solid #ddd;
      }
      .lang-toggle button {
        background: transparent;
        border: none;
        padding: 0.4rem 0.6rem;
        border-radius: 15px;
        font-size: 1.4rem;
        transition: all 0.2s ease;
        opacity: 0.5;
        line-height: 1;
      }
      .lang-toggle button:hover {
        opacity: 0.8;
      }
      .lang-toggle button.active {
        opacity: 1;
        transform: scale(1.1);
      }
      nav{display:flex;flex-direction:column;gap:.65rem;text-align:center}
      nav a{color:inherit;text-decoration:none;font-weight:600;text-transform:lowercase;letter-spacing:.02em;padding:.25rem .5rem}
      nav a:hover{text-decoration:underline}
      .wrap{padding:2rem}
    </style>
  </head>
  <body>
    <div class="custom-cursor"></div>
    <div class="lang-toggle">
      <button class="lang-btn active" data-lang="en">ðŸ‡¬ðŸ‡§</button>
      <button class="lang-btn" data-lang="et">ðŸ‡ªðŸ‡ª</button>
    </div>
    <div class="wrap">
      <nav id="nav">
        <a href="/home" data-i18n="nav.home">home</a>
        <a href="/#portrait-series" data-i18n="nav.portraits">photos</a>
        <a href="/#projects" data-i18n="nav.projects">projects</a>
        <a href="/contact" data-i18n="nav.contact">contact</a>
      </nav>
    </div>
    <script define:vars={{ translations }}>
      const t = translations;
      let currentLang = localStorage.getItem('language') || 'en';

      // Update page text based on language
      function updateLanguage(lang) {
        currentLang = lang;
        localStorage.setItem('language', lang);
        
        // Update all elements with data-i18n attribute
        document.querySelectorAll('[data-i18n]').forEach(el => {
          const key = el.getAttribute('data-i18n');
          const keys = key.split('.');
          let value = t[lang];
          for (const k of keys) {
            value = value[k];
          }
          if (value) {
            el.textContent = value;
          }
        });

        // Update active language button
        document.querySelectorAll('.lang-btn').forEach(btn => {
          btn.classList.toggle('active', btn.getAttribute('data-lang') === lang);
        });

        // Update HTML lang attribute
        document.documentElement.lang = lang;
      }

      // Language toggle buttons
      document.querySelectorAll('.lang-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const lang = btn.getAttribute('data-lang');
          if (lang) {
            updateLanguage(lang);
          }
        });
      });

      // Initialize with saved language
      updateLanguage(currentLang);

      // Custom cursor movement
      const cursor = document.querySelector('.custom-cursor');
      document.addEventListener('mousemove', (e) => {
        if (cursor) {
          cursor.style.left = e.clientX + 'px';
          cursor.style.top = e.clientY + 'px';
        }
      });
      
      document.addEventListener('mouseover', (e) => {
        if (cursor && e.target instanceof Element && (e.target.tagName === 'A' || e.target.closest('a'))) {
          cursor.classList.add('hover');
        }
      });
      
      document.addEventListener('mouseout', (e) => {
        if (cursor && e.target instanceof Element && (e.target.tagName === 'A' || e.target.closest('a'))) {
          cursor.classList.remove('hover');
        }
      });
    </script>
  </body>
</html>
