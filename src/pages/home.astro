<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Home</title>
    <style>
      html,body{height:100%}
      body{margin:0;font-family:"Helvetica Neue", Helvetica, Arial, sans-serif;display:flex;align-items:center;justify-content:center;background:#fff;color:#111;cursor:none}
      * {cursor:none !important}
      .custom-cursor {
        width: 20px;
        height: 20px;
        border: 2px solid #111;
        border-radius: 50%;
        position: fixed;
        pointer-events: none;
        z-index: 10001;
        transform: translate(-50%, -50%);
        transition: width 0.2s ease, height 0.2s ease, border-color 0.2s ease;
      }
      .custom-cursor.hover {
        width: 40px;
        height: 40px;
        border-color: #999;
      }
      nav{display:flex;flex-direction:column;gap:.65rem;text-align:center}
      nav a{color:inherit;text-decoration:none;font-weight:600;text-transform:lowercase;letter-spacing:.02em;padding:.25rem .5rem}
      nav a:hover{text-decoration:underline}
      .wrap{padding:2rem}
    </style>
  </head>
  <body>
    <div class="custom-cursor"></div>
    <div class="wrap">
      <nav>
        <a href="/">home</a>
        <a href="/#portrait-series">portraits</a>
        <a href="/#projects">projects</a>
        <a href="/contact">contact</a>
      </nav>
    </div>
    <script>
      const cursor = document.querySelector('.custom-cursor');
      document.addEventListener('mousemove', (e) => {
        if (cursor) {
          cursor.style.left = e.clientX + 'px';
          cursor.style.top = e.clientY + 'px';
        }
      });
      
      document.addEventListener('mouseover', (e) => {
        if (cursor && e.target instanceof Element && (e.target.tagName === 'A' || e.target.closest('a'))) {
          cursor.classList.add('hover');
        }
      });
      
      document.addEventListener('mouseout', (e) => {
        if (cursor && e.target instanceof Element && (e.target.tagName === 'A' || e.target.closest('a'))) {
          cursor.classList.remove('hover');
        }
      });
    </script>
  </body>
</html>
