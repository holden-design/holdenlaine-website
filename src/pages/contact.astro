<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact - Holden Laine Photography</title>
    <style>
      body {
        margin: 0;
        font-family: "Helvetica Neue", Helvetica;
        background: #fff;
        color: #222;
        display: block;
      }
      .container {
        max-width: 720px;
        margin: 0 auto;
        padding: 2rem;
      }
      .sidebar {
        width: 110px;
        padding: 0 0 1.5rem 0;
        display: block;
        margin-bottom: 1rem;
      }
      .sidebar nav a {
        display: block;
        margin: 0.5rem 0;
        color: #222;
        text-decoration: none;
        font-weight: 500;
        text-transform: lowercase;
        font-family: inherit;
        letter-spacing: 0.02em;
      }
      .sidebar nav a:hover { text-decoration: underline; }
      .main-content {
        max-width: 720px;
        margin: 0 auto;
        padding: 0;
      }
      .contact-info {
        margin-top: 2rem;
      }
      .contact-info a {
        color: #222;
        text-decoration: none;
      }
      .contact-info a:hover {
        text-decoration: underline;
      }
      .contact-info p {
        margin: 0.75rem 0;
        font-size: 1rem;
      }
      h1 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }
      @media (min-width: 600px) {
        .sidebar {
          position: fixed;
          left: 0.5rem;
          top: 2rem;
          width: 110px;
          padding: 0;
          margin: 0;
        }
        .container {
          padding-left: 140px;
        }
        .sidebar nav a {
          margin: 0.35rem 0;
          font-size: 0.95rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="sidebar">
        <nav>
          <a href="/home">Home</a>
          <a href="/#portrait-series">Portraits</a>
          <a href="/#projects">Projects</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>
      <div class="main-content">
        <h1>Contact</h1>
        <div class="contact-info">
          <p><a href="mailto:holdenlaine@outlook.com">holdenlaine@outlook.com</a></p>
          <p><a href="tel:+37255569043">+372 555 69043</a></p>
        </div>
      </div>
    </div>
  </body>
</html>
